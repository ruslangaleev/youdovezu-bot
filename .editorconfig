# ============================================================================
# .editorconfig - настройки форматирования кода
# ============================================================================

# Это главный файл EditorConfig. Подробнее: https://EditorConfig.org

# Все файлы
root = true

# ============================================================================
# Общие настройки
# ============================================================================

[*]
# Кодировка файлов
charset = utf-8

# Окончания строк
end_of_line = lf

# Вставлять финальную новую строку в конце файла
insert_final_newline = true

# Удалять пробелы в конце строк
trim_trailing_whitespace = true

# Размер отступа
indent_size = 4

# Символ отступа (пробелы)
indent_style = space

# ============================================================================
# C# файлы
# ============================================================================

[*.{cs,csx,vb,vbx}]
# Размер отступа для C#
indent_size = 4
indent_style = space

# ============================================================================
# JavaScript/TypeScript файлы
# ============================================================================

[*.{js,jsx,ts,tsx,mjs,cjs}]
# Размер отступа для JS/TS
indent_size = 2
indent_style = space

# ============================================================================
# JSON файлы
# ============================================================================

[*.{json,jsonc}]
# Размер отступа для JSON
indent_size = 2
indent_style = space

# ============================================================================
# YAML файлы
# ============================================================================

[*.{yml,yaml}]
# Размер отступа для YAML
indent_size = 2
indent_style = space

# ============================================================================
# XML файлы
# ============================================================================

[*.{xml,xsd,xsl,xslt}]
# Размер отступа для XML
indent_size = 2
indent_style = space

# ============================================================================
# HTML файлы
# ============================================================================

[*.{html,htm}]
# Размер отступа для HTML
indent_size = 2
indent_style = space

# ============================================================================
# CSS/SCSS файлы
# ============================================================================

[*.{css,scss,sass,less}]
# Размер отступа для CSS
indent_size = 2
indent_style = space

# ============================================================================
# Markdown файлы
# ============================================================================

[*.{md,markdown}]
# Размер отступа для Markdown
indent_size = 2
indent_style = space

# Не удалять пробелы в конце строк для Markdown (нужны для переносов)
trim_trailing_whitespace = false

# ============================================================================
# Конфигурационные файлы
# ============================================================================

[*.{config,props,targets}]
# Размер отступа для конфигурационных файлов
indent_size = 2
indent_style = space

# ============================================================================
# Docker файлы
# ============================================================================

[Dockerfile*]
# Размер отступа для Dockerfile
indent_size = 2
indent_style = space

# ============================================================================
# SQL файлы
# ============================================================================

[*.{sql,psql}]
# Размер отступа для SQL
indent_size = 2
indent_style = space

# ============================================================================
# Shell скрипты
# ============================================================================

[*.{sh,bash}]
# Размер отступа для shell скриптов
indent_size = 2
indent_style = space

# ============================================================================
# PowerShell скрипты
# ============================================================================

[*.{ps1,psm1,psd1}]
# Размер отступа для PowerShell
indent_size = 4
indent_style = space

# ============================================================================
# Batch файлы
# ============================================================================

[*.{bat,cmd}]
# Размер отступа для batch файлов
indent_size = 2
indent_style = space

# ============================================================================
# Специальные файлы
# ============================================================================

# Git файлы
[.git*]
indent_size = 2
indent_style = space

# Package.json
[package.json]
indent_size = 2
indent_style = space

# Docker Compose
[docker-compose*.yml]
indent_size = 2
indent_style = space

[docker-compose*.yaml]
indent_size = 2
indent_style = space

# ============================================================================
# Исключения
# ============================================================================

# Файлы, которые не должны форматироваться
[*.{min.js,min.css}]
indent_size = unset
indent_style = unset
trim_trailing_whitespace = false

# Бинарные файлы
[*.{png,jpg,jpeg,gif,bmp,ico,svg,pdf,doc,docx,xls,xlsx,ppt,pptx,zip,rar,7z,tar,gz,bz2,mp3,mp4,avi,mov,wmv,flv,wav,ogg}]
indent_size = unset
indent_style = unset
trim_trailing_whitespace = false
insert_final_newline = false
