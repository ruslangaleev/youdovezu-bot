# ============================================================================
# ПЕРЕМЕННЫЕ ОКРУЖЕНИЯ ДЛЯ YOUDOVEZU
# ============================================================================
# Скопируйте этот файл в .env и заполните реальными значениями

# ============================================================================
# БАЗА ДАННЫХ POSTGRESQL
# ============================================================================
POSTGRES_DB=youdovezu
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# ============================================================================
# TELEGRAM BOT API
# ============================================================================
# Получите токен у @BotFather в Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# ============================================================================
# WEB APP НАСТРОЙКИ
# ============================================================================
# URL веб-приложения для Telegram Web App
WEB_APP_URL=http://localhost:3000

# URL для webhook Telegram бота (замените на ваш домен в продакшене)
# WEBHOOK_URL=https://yourdomain.com/api/telegram/webhook

# ============================================================================
# ПОРТЫ СЕРВИСОВ
# ============================================================================
# Порт для API (backend)
API_PORT=5000

# Порт для React приложения (frontend)
FRONTEND_PORT=3000

# Порт для PostgreSQL
POSTGRES_PORT=5432

# ============================================================================
# ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ
# ============================================================================
# Окружение (development, production)
ASPNETCORE_ENVIRONMENT=Development

# Строка подключения к базе данных (автоматически формируется из переменных выше)
# CONNECTION_STRING=Host=localhost;Port=5432;Database=youdovezu;Username=postgres;Password=postgres
